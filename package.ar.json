  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "coverage/**",
      "tests/**",
      "dist/**"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
