{
  "name": "@muslims-community/prayer-times-calculation",
  "version": "1.0.0",
  "description": "Minimalist & offline Prayer Times calculation SDK",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && npm run build:esm",
    "build:esm": "tsc --module esnext --outDir dist/esm && mv dist/esm/index.js dist/index.esm.js && rm -rf dist/esm",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "prayer-times",
    "islam",
    "salah",
    "offline",
    "calculation",
    "sdk",
    "typescript"
  ],
  "author": "Mahmoud Alsamman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Muslims-Community/prayer-times-calculation-ts.git"
  },
  "homepage": "https://github.com/Muslims-Community/prayer-times-calculation-ts#readme",
  "bugs": {
    "url": "https://github.com/Muslims-Community/prayer-times-calculation-ts/issues"
  },
  "files": [
    "dist/",
    "README.md",
    "README.ar.md",
    "README.ur.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}